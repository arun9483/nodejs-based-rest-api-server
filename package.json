{
  "name": "nodejs-based-rest-api-server",
  "version": "1.0.0",
  "description": "webpack, nodeJs, typescript based rest api server",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src",
    "dev": "nodemon",
    "prod": "node dist",
    "build": "tsc",
    "preprod": "npm run build",
    "debug": "cross-env PORT=4000 node --inspect dist",
    "predebug": "npm run build",
    "lint": "tslint src/**/*.ts",
    "lint:fix": "tslint --fix src/**/*.ts",
    "format": "prettier src/**/*.ts --write",
    "test": "jasmine-ts --config=jasmine.json",
    "testWithCoverage": "nyc -r lcov -e .ts -x \"*.spec.ts\" jasmine-ts --config=jasmine.json && nyc report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arun9483/nodejs-based-rest-api-server.git"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "expressjs"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arun9483/nodejs-based-rest-api-server/issues"
  },
  "homepage": "https://github.com/arun9483/nodejs-based-rest-api-server#readme",
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/jasmine": "^3.3.5",
    "@types/node": "^10.12.18",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "jasmine": "^3.3.1",
    "jasmine-ts": "^0.3.0",
    "lint-staged": "^13.1.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "express": "^4.16.4",
    "dotenv": "^6.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
